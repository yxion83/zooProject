<Window x:Class="ZooScenario.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooScenario"
        mc:Ignorable="d"
        Title="GuestWindow" Height="350" Width="380" Loaded="window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Label x:Name="nameLabel" Grid.Row="1" Grid.Column="0" Content="Name:" HorizontalAlignment="Right"/>
            <Label x:Name="genderLabel" Grid.Row="3" Grid.Column="0" Content="Gender:" HorizontalAlignment="Right"/>
            <Label x:Name="ageLabel" Grid.Row="5" Grid.Column="0" Content="Age:" HorizontalAlignment="Right"/>
            <Label Grid.Row="7" Grid.Column="0" Content="Wallet color:" HorizontalAlignment="Right"/>
            <TextBox x:Name="nameTextBox" Grid.Row="1" Grid.Column="2" Width="200" HorizontalAlignment="left" LostFocus="nameTextBox_LostFocus"></TextBox>
            <ComboBox x:Name="genderComboBox" Grid.Row="3" Grid.Column="2" Width="200" HorizontalAlignment="Left" SelectionChanged="genderComboBox_SelectionChanged"/>
            <TextBox x:Name="ageTextBox" Grid.Row="5" Grid.Column="2" Width="200" HorizontalAlignment="Left" LostFocus="ageTextBox_LostFocus"/>
            <ComboBox x:Name="walletColorComboBox" Grid.Row="7" Width="200" HorizontalAlignment="Left" Grid.Column="2" SelectionChanged="walletColorComboBox_SelectionChanged" />
            <Label Content="Money Balance:" Grid.Row="9" Grid.Column="0"/>
            <ComboBox x:Name="moneyAmountComboBox" Grid.Row="9" Grid.Column="2" Margin="46,0,55,0" Width="80"/>
            <RepeatButton x:Name="addMoneyButton" Content="+" Grid.Row="9" Grid.Column="2" Width="23" Height="23" RenderTransformOrigin="-2.427,0.523" Margin="10,6,163,1" Click="addMoneyButton_Click"/>
            <RepeatButton x:Name="subtractMoneyButton" Content="-" Grid.Row="9" Grid.Column="2" Width="23" Height="23" RenderTransformOrigin="-2.427,0.523" Margin="154,7,19,0" Click="subtractMoneyButton_Click"/>
            <Label x:Name="moneyBalanceLabel" Content="$20.00" Grid.Column="2" Grid.Row="10" HorizontalContentAlignment="Center" Width="100" Height="23" Margin="68,2,78,9" Grid.RowSpan="2" />
            <Label Content="Account Balance:" Grid.Row="13" />
            <ComboBox x:Name="accountComboBox" Grid.Row="13" Grid.Column="2" Width="80"/>
            <RepeatButton x:Name="addAccountButton" Content="+" Grid.Row="13" Grid.Column="2" Width="23" Height="23" Margin="35,1,188,6" RenderTransformOrigin="0.402,0.919" Click="addAccountButton_Click"/>
            <RepeatButton x:Name="subtractAccountButton" Content="-" Grid.Row="13" Grid.Column="2" Width="23" Height="23" Margin="177,0,46,7" RenderTransformOrigin="0.459,-0.138" Click="subtractAccountButton_Click" />
            <Label x:Name="accountBalanceLabel" Content="$20.00" Grid.Column="2" Grid.Row="15" HorizontalContentAlignment="Center" Width="100" Height="23"/>
        </Grid>
        <Button x:Name="okButton" Width="90" Margin="0,0,100,4" Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsDefault="True" Click="okButton_Click" Grid.Column="1"/>
        <Button x:Name="cancelButton" Width="90" Margin="0,0,5,4" Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsCancel="True" RenderTransformOrigin="0.286,-1.459" Grid.Column="1"/>
    </Grid>
</Window>

<Window x:Name="window" x:Class="ZooScenario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooScenario"
        mc:Ignorable="d"
        Title="Object-Oriented Programming 2: Zoo" Height="405" Width="650" WindowStartupLocation="CenterScreen" Loaded="window_Loaded" Closing="window_Closing">
    <Grid Margin="0,0,5,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="247*"/>
            <ColumnDefinition Width="44*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="admitGuestButton" Content="Admit Guest" HorizontalAlignment="Left" Height="21" Margin="33,32,0,0" VerticalAlignment="Top" Click="admitGuestButton_Click" Width="109"/>
        <Button x:Name="feedAnimalButton" Content="Feed animal" Margin="33,68,0,0" Click="feedAnimalButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="109"/>
        <Button x:Name="showCageButton" Content="Show cage" Margin="33,98,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="109" Click="showCageButton_Click"/>
        <Button x:Name="changeMoveBehaviorButton" Content="Change behavior" Margin="33,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="109" Click="changeMoveBehaviorButton_Click"/>
        <Button x:Name="birthAnimalButton" Content="Birth Animal" Margin="33, 160, 0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="20" Click="birthAnimalButton_Click"/>
        <Button x:Name="saveButton" Content="Save" Margin="33, 190, 0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="20" Click="saveButton_Click"/>
        <Button x:Name="loadButton" Content="Load" Margin="33, 220, 0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="20" Click="loadButton_Click"/>
        <Button x:Name="restartButton" Content="Restart" Margin="33, 250, 0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="20" Click="restartButton_Click"/>
        <Button x:Name="adoptAnimalButton" Content="Adopt Animal" Margin="33,0,0,55" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="109" Click="adoptAnimalButton_Click"/>
        <Button x:Name="unadoptAnimalButton" Content="UnAdopt Animal" Margin="33,0,0,30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="109" Click="unadoptAnimalButton_Click"/>
        <Border x:Name="temperatureBorder" BorderBrush="Black" BorderThickness="1" Margin="0,0,23,18" Width="20" Height="100" Background="Red" HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="-7.423,-0.098" Grid.Column="1">
        </Border>
        <RepeatButton x:Name="increaseTemperatureButton" Content="+" Width="23" Height="23" Margin="0,0,68,68" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="increaseTemperatureButton_Click" Grid.ColumnSpan="2" />
        <RepeatButton x:Name="decreaseTemperatureButton" Content="-" Width="23" Height="23" Margin="0,0,68,27" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="decreaseTemperatureButton_Click" Grid.ColumnSpan="2" />
        <Label x:Name="temperatureLabel" Content="Temp" HorizontalAlignment="Right" Margin="0,0,60,96" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <ListBox x:Name="animalListBox" Margin="170,48,179,76" BorderBrush="#FFB6C9FF" Height="215" Width="150" MouseDoubleClick="animalListBox_MouseDoubleClick"/>
        <Button x:Name="addAnimalButton" Content="Add Animal" Margin="-100,0,0,55" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="addAnimalButton_Click"/>
        <Button x:Name="removeAnimalButton" Content="Remove Animal" Margin="-70,0,0,30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Click="removeAnimalButton_Click"/>
        <ListBox x:Name="guestListBox" Margin="342,48,7,76" BorderBrush="#FFCAD7FF" Height="215" Width="145" MouseDoubleClick="guestListBox_MouseDoubleClick"/>
        <Button x:Name="removeGuestButton" Content="Remove Guest" Margin="0,0,75,30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Click="removeGuestButton_Click"/>
        <Button x:Name="addGuestButton" Content="Add Guest" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,115,55" Click="addGuestButton_Click"/>
        <ComboBox x:Name="animalTypeComboBox" Margin="-10,15,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" Width="150" RenderTransformOrigin="0.227,0.827"/>
        <ComboBox x:Name="changeMoveBehaviorComboBox" Margin="0,40,197,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="150" Height="20"/>
    </Grid>
</Window>
